  Future<void> _handleAction() async {
    if (_isCodeSent) {
      // If resend allowed -> perform resend
      if (_canResend) {
        await _resendCode();
      } else {
        // confirm code
        await _confirmCode();
      }
    } else {
      await _sendPhone();
    }
